{% if data.structs %}
<section class="structs-section">
  <h2>Structures</h2>
  {% for struct in data.structs %}
    <div class="struct" id="struct-{{ struct.name }}">
      <h3>{{ struct.name }}</h3>
      
      {% if struct.doc %}
      <div class="docstring">
        {{ struct.doc | markdown | safe }}
      </div>
      {% endif %}
      
      {% if struct.fields %}
      <div class="table-container">
        <table class="struct-fields">
          <thead>
            <tr>
              <th class="field-name">Field</th>
              <th class="field-desc">Description</th>
            </tr>
          </thead>
          <tbody>
            {% for field in struct.fields %}
            <tr>
              <td class="field-name"><code>{{ field.name }}: {{ field.type }}</code></td>
              <td class="field-desc">{{ field.doc | default("") | markdown | safe }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      {% endif %}
      
      {% if struct.functions %}
      <div class="methods">
        <h4>Methods</h4>
        {% for method in struct.functions %}
        <div class="method" id="method-{{ struct.name }}-{{ method.name }}">
          {% if method.signature %}
          <div class="signature">
            {{ method.signature | highlight(language="zig") }}
          </div>
          {% endif %}
          
          {% if method.doc %}
          <div class="docstring">
            {{ method.doc | markdown | safe }}
          </div>
          {% endif %}
          
          {% if method.parameters %}
          <div class="parameters">
            <h6>Parameters</h6>
            <ul>
              {% for param in method.parameters %}
              <li>
                <code>{{ param.name }}</code>: {{ param.doc | default("") | markdown | safe }}
              </li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
        </div>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  {% endfor %}
</section>
{% endif %}