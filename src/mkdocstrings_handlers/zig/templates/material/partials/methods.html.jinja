{% if struct.functions %}
<div class="methods">
  <h4>Methods</h4>
  {% for method in struct.functions %}
  <div class="method" id="method-{{ struct.name }}-{{ method.name }}">
    {% if method.signature %}
    <div class="signature">
      {{ method.signature | highlight(language="zig") }}
    </div>
    {% endif %}
    
    {% if method.doc %}
    <div class="docstring">
      {{ method.doc | markdown | safe }}
    </div>
    {% endif %}
    
    {% if method.parameters %}
    <div class="parameters">
      <h6>Parameters</h6>
      <ul>
        {% for param in method.parameters %}
        <li>
          <code>{{ param.name }}</code>: {{ param.doc | default("") | markdown | safe }}
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
  </div>
  {% endfor %}
</div>
{% endif %}